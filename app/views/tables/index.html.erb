<p id="notice"><%= notice %></p>

<div class="page-fixed-main-content">
  <% @by_league_time.each do |country, matches| %>
	<div class="portlet box green">
		<div class="portlet-title">
			<div class="caption">
				<i class="fa fa-cogs"></i><%= country %>
			</div>
			<div class="tools">
				<a href="javascript:;" class="collapse">
				</a>
				<a href="#portlet-config" data-toggle="modal" class="config">
				</a>
				<a href="javascript:;" class="reload">
				</a>
				<a href="javascript:;" class="remove">
				</a>
			</div>
		</div>
		<div class="portlet-body flip-scroll">
			<table class="table table-bordered table-striped table-condensed flip-content" id="table1">
			<thead class="flip-content">
			<tr>
				<th width="20%">
					 Date & Time
				</th>
				<th>
					 Home
				</th>
				<th>
					 Draw
				</th>
				<th>
					 Away
				</th>
				<th>
				</th>
			</tr>
			</thead>
			<tbody>
        <% matches.each do |match| %>
			<tr>
				<td>
					  <%= match["time"].to_time.strftime("%d %b %I:%M%p") %>
				</td>
				<td>
					 <%= link_to "#{match["hometeam"]} | #{match["oddwinh"]}","javascript:void(0)",data: {id: match["matchid"], datetime: match["datetime"]},:id=>"match_id" %>
				</td>
				<td>
					 Draw | <%= match["oddwind"] %>
				</td>
				<td>
					 <%= match["awayteam"] %> | <%= match["oddwina"] %>
				</td>
				<td class="numeric">
					 +
				</td>
			</tr>
      <% end %>
			</tbody>
			</table>
		</div>
	</div>
  <% end %>


<%= form_for Game.new do |f| %>



    <%= f.text_field :stake, placeholder: "stake" %>
    <%= f.text_field :home, placeholder: "home" %>
    <%= f.text_field :away, placeholder: "away" %>
    <%= f.text_field :type, placeholder: "type" %>
    <%= f.text_field :bet, placeholder: "bet" %>

      <%= f.submit %>
<% end %>
</div>
<script type="text/javascript">
	$(document).on('click','#match_id',function(){
		var data_id = $(this).attr('data-id');
		var data_time = $(this).attr('data-datetime');
		$("#new_game").prepend("<input type='hidden' name='matchid' value="+data_id+"/><input type='hidden' name='datetime' value="+data_time+"/>");

	});
</script>